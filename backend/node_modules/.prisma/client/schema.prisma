// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "darwin-arm64"]
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id           Int                @id @default(autoincrement())
  username     String             @unique
  email        String             @unique
  passwordHash String?
  has2fa       Boolean            @default(false)
  secret2fa    String?
  matches      MatchParticipant[]
  friendshipsA Friendship[]       @relation("FriendA")
  friendshipsB Friendship[]       @relation("FriendB")
  avatar       Bytes?
  isLogged     Boolean            @default(false)
}

model Match {
  id               Int                @id @default(autoincrement()) // primary key
  matchParticipant MatchParticipant[]
  date             DateTime
}

model MatchParticipant {
  id Int @id @default(autoincrement()) // primary key

  user   User? @relation(fields: [userId], references: [id]) //relation user
  userId Int? //foreign key

  localUser String? //local player name

  match   Match @relation(fields: [matchId], references: [id])
  matchId Int //foreign key

  goals Int
}

model Friendship {
  id Int @id @default(autoincrement()) //primary key

  friendA   User @relation("FriendA", fields: [friendAId], references: [id])
  friendAId Int

  friendB   User @relation("FriendB", fields: [friendBId], references: [id])
  friendBId Int

  status String //pending, accepted or declined

  @@unique([friendAId, friendBId])
}

