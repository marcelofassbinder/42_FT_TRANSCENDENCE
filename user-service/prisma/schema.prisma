generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
	id          		Int    @id @default(autoincrement()) // primary key
	username    		String @unique
	matches				MatchParticipant[]
	friends				User[] @relation("UserFriends") // amigos este user adicionou - self relationship
	friendsOf			User[] @relation("UserFriends") // users que adicionaram este user como amigo - self-relationship
}

model Match {
	id          		Int    @id @default(autoincrement()) // primary key
	matchParticipant	MatchParticipant[]
	date 				DateTime

}

model MatchParticipant { //intermediary table to relate users to matches (many-to-many relationship)
	id					Int	@id @default(autoincrement()) // primary key

	user				User @relation(fields: [userId], references: [id]) //relation user
	userId				Int //foreign key

	match				Match @relation(fields: [matchId], references: [id])
	matchId				Int //foreign key

	goals				Int
}
